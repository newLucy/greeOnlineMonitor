>>> .el-dialog__header {
  text-align left
  background-color $bgColor
  .el-dialog__title {
    color: white;
    font-size: .44rem;
  }
  .el-dialog__headerbtn .el-dialog__close {
    color: white;
  }
  .el-dialog__headerbtn:hover .el-dialog__close:hover {
    color: white;
    opacity 0.7
  }
}
.body {
  .content {
    margin: 1rem auto 1.6rem;
    >>> .el-form-item {
      text-align: left;
      label {
        font-weight: bold;
        font-size: .32rem;
        width: 3rem;
      }
    }
  }
  .footer {
    margin: .3rem 0 .9rem 0;
    >>> button {
      padding: 0 1.5rem;
      margin: 0 auto;
    }
  }
}
  @media screen and (max-width: 600px) {
    >>> .el-form-item {
      label {
        display: block;
        text-align: left;
      }
    }
  }
